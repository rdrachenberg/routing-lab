    <div id="loadingBox" class="notification mx-auto">
        <span>Loading â€¦</span>
    </div>
    <div id="infoBox" class="notification mx-auto">
        <span>Info</span>
        <div id="infoMessage"></div>
    </div>
    <div id="errorBox" class="notification mx-auto">
        <span>Error</span>
        <div id="errorMessage"></div>
    </div>
</div>